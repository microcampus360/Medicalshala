{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
